<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data class="ListImagesItemBinding">

        <variable
            name="handler"
            type="com.demo.transition.image.app.adapters.ImagesListAdapter.ImagesListItemHandler"/>

        <variable
            name="image"
            type="com.demo.transition.image.ds.Image"/>
    </data>

    <android.support.v7.widget.CardView
        style="@style/Item_CV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{handler::onImageItemClick}"
        android:tag="@{image}"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:imageUrl="@{image.getImageUrl().getNormal()}"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:lines="3"
                android:text="@{image.title}"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>